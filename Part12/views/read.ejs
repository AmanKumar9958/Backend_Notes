<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Read Users</title>
</head>
<body>
    <div class="w-full min-h-screen bg-gray-800 text-white p-8">
        <a class="text-blue-400 hover:underline font-semibold" href="/">Back to home</a>
        <h1 class="text-2xl font-bold mb-5">All Users</h1>
        <!-- all users -->
        <div class="flex flex-wrap gap-3 w-full">
            <!-- single user -->
            <% if(users.length === 0){ %>
                <h1>No User registered yet</h1>
            <% } else { %>
                <% users.forEach(function(user){ %>
                    <div class="w-72 flex-shrink-0 bg-zinc-800 rounded-lg p-4">
                        <!-- image -->
                        <div class="w-full h-52 rounded-lg bg-zinc-600"></div>
                        <!-- name -->
                        <h1 class="font-bold text-lg"><%= user.name %></h1>
                        <p class="text-zinc-400 font-semibold"><%= user.username %></p>
                        <!-- buttons -->
                        <div class="flex items-center gap-5 justify-between mt-2">
                            <a href="/update/<%= user._id %>" class="p-2 rounded-lg bg-blue-600 hover:cursor-pointer hover:rounded-full transition-all duration-200 hover:-translate-y-2">✏</a>
                            <a href="/delete/<%= user._id %>" class="p-2 rounded-lg bg-red-400 hover:cursor-pointer hover:rounded-full transition-all duration-200 hover:-translate-y-2">🗑️</a>
                        </div>
                    </div>
            <% }) %>
            <% } %>
        </div>
    </div>
    <script src="/javascript/myScripts.js"></script>
</body>
</html>