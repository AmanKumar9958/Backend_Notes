<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Favourite Notes</title>
</head>
<body>
    <div class="w-full min-h-screen bg-gray-800 text-white p-3">
        <!-- Cards -->
        <h1 class="font-bold text-2xl text-center">Your Favourite Notes</h1>
        <div class="flex flex-col gap-3 flex-wrap p-3 rounded-lg items-center justify-center">
            <div class="flex gap-3 flex-wrap justify-center">
                <% if (savedFiles.length > 0) { %>
                    <% savedFiles.forEach(function(val) { %>
                        <div class="border-2 border-gray-500 rounded-lg p-3 flex items-center gap-5">
                            <div>
                                <p class="font-bold text-lg"><%= val.title %></p>
                                <a href="/savedFiles/<%=val.title %>" class="text-blue-500 font-semibold">Read More</a>
                            </div>
                            <div class="flex gap-2">
                                <a href="/deleteSavedFile/<%= val.title %>" class="hover:scale-120 hover:cursor-pointer transition-all duration-200">
                                    <section class="flex justify-center items-center">
                                    <button
                                        href="/deleteSavedFile/<%= val.title %>"
                                        class="group flex justify-center p-2 rounded-md drop-shadow-xl from-gray-800 bg-[#316FF6] text-white font-semibold hover:translate-y-3 hover:rounded-[50%] 
                                        transition-all duration-500 hover:from-[#331029] hover:to-[#310413] hover:cursor-pointer
                                        hover:bg-red-500"
                                    >
                                        üóëÔ∏è
                                        <span
                                        class="absolute opacity-0 group-hover:opacity-100 group-hover:text-red-500 group-hover:text-sm group-hover:-translate-y-10 duration-700 font-semibold"
                                        >
                                        Delete
                                        </span>
                                    </button>
                                    </section>
                                </a>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <h1 class="text-gray-600 font-bold text-xl">NO Notes</h1>
                <% } %>
            </div>
            <div>
                <a href="/" class="font-bold text-2xl text-center flex items-center justify-center gap-3"> <span class="font-bold text-2xl">+</span> Notes</a>
            </div>
        </div>
    </div>
    <script src="/javascript/myScripts.js"></script>
</body>
</html>