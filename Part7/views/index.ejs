<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Notes Saving</title>
</head>
<body>
    <div class="w-full min-h-screen bg-gray-800 text-white flex items-center justify-center flex-col gap-5 p-3">
        <h1 class="font-bold text-2xl">Notes Saving App</h1>
        <!-- Form -->
        <div>
            <form action="/create" method="post" class="bg-gray-400 flex flex-col gap-5 p-3 rounded-2xl text-black">
                <input type="text" name="title" id="title" placeholder="Enter the title.." class="border-2 border-gray-900 px-3 py-2 rounded-2xl">
                <textarea name="description" id="description" cols="30" rows="10" placeholder="Write about the title.." class="border-2 border-gray-900 px-3 py-2 rounded-2xl"></textarea>
                <input type="submit" value="Create" class="hover:cursor-pointer border-2 border-blue-400 hover:border-bg-500 bg-blue-400 hover:bg-blue-500 rounded-xl font-bold w-fit m-auto px-3 py-2">
            </form>
        </div>
        <!-- Cards -->
        <h1 class="font-bold text-xl">Your saved cards</h1>
        <div class="flex gap-3 flex-wrap p-3 rounded-lg items-center justify-center">
            <% if (files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="border-2 border-gray-500 rounded-lg p-3 flex items-center gap-3">
                        <div>
                            <p class="font-bold text-lg"><%= val %></p>
                            <a href="/file/<%=val %>" class="text-blue-500 font-semibold">Read More</a>
                        </div>
                        <div class="flex gap-2">
                            <a href="/deleteFile/<%= val %>" class="hover:scale-110 hover:cursor-pointer">üóëÔ∏è</a>
                            <a href="/savedFile" class="hover:scale-110 hover:cursor-pointer">‚ù§</a>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <h1 class="text-gray-600 font-bold text-xl">No tasks</h1>
            <% } %>
        </div>
    </div>
    <script src="/javascript/myScripts.js"></script>
</body>
</html>