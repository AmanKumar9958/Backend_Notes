<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Notes Saving</title>
</head>
<body>
    <div class="w-full min-h-screen bg-gray-800 text-white flex items-center justify-center flex-col gap-5 p-3">
        <h1 class="font-bold text-2xl">Notes Saving App</h1>
        <!-- Form -->
        <div>
            <form action="/create" method="post" class="bg-gray-400 flex flex-col gap-5 p-3 rounded-2xl text-black">
                <input type="text" name="title" id="title" placeholder="Enter the title.." class="border-2 border-gray-900 px-3 py-2 rounded-2xl">
                <textarea name="description" id="description" cols="30" rows="10" placeholder="Write about the title.." class="border-2 border-gray-900 px-3 py-2 rounded-2xl"></textarea>
                <input type="submit" value="Create" class="hover:cursor-pointer border-2 border-blue-400 hover:border-bg-500 bg-blue-400 hover:bg-blue-500 rounded-xl font-bold w-fit m-auto px-3 py-2">
            </form>
        </div>
        <!-- Cards -->
        <h1 class="font-bold text-xl">Your Notes</h1>
        <div class="flex gap-3 flex-wrap p-3 rounded-lg items-center justify-center">
            <% if (files.length > 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="border-2 border-gray-500 rounded-lg p-3 flex items-center gap-5">
                        <div>
                            <p class="font-bold text-lg"><%= val.title%></p>
                            <a href="/file/<%=val.title %>" class="text-blue-500 font-semibold">Read More</a>
                        </div>
                        <div class="flex gap-2">
                            <a href="/deleteFile/<%= val.title %>" class="hover:scale-120 hover:cursor-pointer transition-all duration-200">
                                    <section class="flex justify-center items-center">
                                    <button
                                        href="/deleteFile/<%= val.title %>"
                                        class="group flex justify-center p-2 rounded-md drop-shadow-xl from-gray-800 bg-[#316FF6] text-white font-semibold hover:translate-y-3 hover:rounded-[50%] 
                                        transition-all duration-500 hover:from-[#331029] hover:to-[#310413] hover:cursor-pointer
                                        hover:bg-red-500"
                                    >
                                        üóëÔ∏è
                                        <span
                                        class="absolute opacity-0 group-hover:opacity-100 group-hover:text-red-500 group-hover:text-sm group-hover:-translate-y-10 duration-700 font-semibold"
                                        >
                                        Delete
                                        </span>
                                    </button>
                                    </section>
                                </a>
                            <a href="/savedFile/<%= val.title %>" class="hover:scale-120 hover:cursor-pointer transition-all duration-200">
                                    <section class="flex justify-center items-center">
                                    <button
                                        href="/savedFile/<%= val.title %>"
                                        class="group flex justify-center p-2 rounded-md drop-shadow-xl from-gray-800 bg-[#316FF6] text-white font-semibold hover:translate-y-3 hover:rounded-[50%] 
                                        transition-all duration-500 hover:from-[#331029] hover:to-[#310413] hover:cursor-pointer
                                        hover:bg-red-500"
                                    >
                                        ‚ù§
                                        <span
                                        class="absolute opacity-0 group-hover:opacity-100 group-hover:text-red-500 group-hover:text-sm group-hover:-translate-y-10 duration-700 font-semibold"
                                        >
                                        Favourite
                                        </span>
                                    </button>
                                    </section>
                                </a>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <h1 class="text-gray-600 font-bold text-xl">NO Notes</h1>
            <% } %>
        </div>
        <a href="/savedFiles" class="font-bold text-xl border-2 border-gray-500 p-2 rounded-xl">Your Favourite Notes</a>
    </div>
    <script src="/javascript/myScripts.js"></script>
</body>
</html>